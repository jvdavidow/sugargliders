<!DOCTYPE html>
<html>
<head>
  <title>Sugargliders</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header></header>
	
	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>
	
	<div id="user_nav">
		<% if user_signed_in? %>
			Logged in as <strong><%= current_user.username %></strong>
			<%= link_to "edit profile", edit_user_registration_path %>
			<%= link_to "hit the road", destroy_user_session_path, 					method: :delete %>
		<% else %>
			<%= link_to "join in", new_user_registration_path %>
			<%= link_to "login", new_user_session_path %>
		<% end %>
	</div>
	
	<nav>
		<ul>
			<li><%= link_to "wall", readings_path(@index) %></li>
			<li><%= link_to "posts", readings_path(@readings) %></li>
			<li><%= link_to "teams", readings_path(@teams) %></li>
			<li><%= link_to "profile", readings_path(@profile) %></li>
		</ul>
	</nav>
	
	<section></section>
	<section></section>
	<section></section>
	<section></section>

<%= yield %>

</body>
</html>
